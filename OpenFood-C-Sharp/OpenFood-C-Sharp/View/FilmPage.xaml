<Page x:Class="OpenFood_C_Sharp.View.FilmPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OpenFood_C_Sharp.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="LightGray"
      Title="FilmPage">

    <Grid HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="500">
        <Grid.RowDefinitions>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="backButton" Content="Back" Height="20" Margin="10,300,140,0" VerticalAlignment="Top" RenderTransformOrigin="2,1"/>

        <Label x:Name="title" Margin="0,0,220,290">Title :</Label>

        <Label Margin="0,46,34,246" >Characters :</Label>
        <ListBox x:Name="ListCharacters" Margin="80,46,53,196" Grid.ColumnSpan="1"/>
        <ListBox x:Name="ListSpaceShip" Margin="80,146,53,96" Grid.ColumnSpan="1"/>
        <Label x:Name="spaceShip" Margin="0,146,150,80">SpaceShip :</Label>

    </Grid>
</Page>
